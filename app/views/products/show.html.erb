<div class="d-flex align-items-center justify-content-center container">
    <div class="card flex flex-row gap-6 mt-4">
        <div class="mx-4">
            <h2 class="mt-3"><%= @product.name %></h2>
            <hr>
            <div class="mt-5">
                <h3 class="mb-3">Price: <%= @product.price %> &#8377;</h3>
                <b>Description: </b><p class="lead"><i><%= @product.description %></i></p>
                <ul class="list-unstyled">
                    <ul>
                        <li>
                            <%= @product.furniture_style.delete("_") %>
                        </li>
                    </ul>
                </ul>
                
                <div class="d-flex flex-column w-20">
                    <small class="text-muted">Contact Now:</small>
                    <a href="tel:998-656-6610" class="btn btn-success" style="width: 140px;">
                        998-656-6610
                    </a>
                </div>
            </div>
            
        </div>

        <div class="border border-end">
            <div id="product<%=@product.id%>_images" class="carousel slide" data-bs-ride="carousel" style="width: 400px">
                <div class="carousel-inner">
                    <% @product.pics.each_with_index do |img, i| %>
                    <div class="carousel-item <%= i==0 ? 'active' : '' %>" style="height: 25rem;">
                        <%= image_tag img, class:"d-block w-100", style:"max-height: 100%; object-fit: cover;" %>
                    </div>
                    <% end %>
                </div>

                <div class="carousel-indicators" style="position:static;">
                    <% @product.pics.each_with_index do |img, i| %>
                    <button type="button" data-bs-target="#@product<%=@product.id%>_images" data-bs-slide-to="<%= i %>" class="bg-dark <%= i==0 ? 'active' : '' %>" <%= i==0 ? 'aria-current="true"' : "" %> aria-label="Slide <%= i+1 %>"></button>
                    <% end %>
                </div>

                <button class="carousel-control-prev" type="button" data-bs-target="#product<%=@product.id%>_images" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon bg-dark rounded-circle" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#product<%=@product.id%>_images" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
                </div>
            </div>
        </div>
    </div>
</div>